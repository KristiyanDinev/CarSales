@using CarSales.Models.Database;
@model CarSales.Models.Views.Admin.AdminHomeViewModel;
@{
    ViewData["Title"] = "Admin Home";
}

<head>
    @await Html.PartialAsync("_Imports")
    <script src="~/js/admin.js"></script>
</head>

<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1>Admin Page</h1>
            @await Html.PartialAsync("_User", Model.User)
            <button class="btn btn-success mt-3" onclick="toggleForm()">Add New Car</button>
        </div>

        <!-- Car Form Section (hidden by default) -->
        <div id="carFormContainer" class="border p-4 rounded mb-4" style="display:none;">
            <h3 id="formTitle">Add New Car</h3>
            <input type="hidden" id="carId" />
            <div class="form-group">
                <label>Make</label>
                <input type="text" class="form-control" id="carMake" required />
            </div>
            <div class="form-group">
                <label>Model</label>
                <input type="text" class="form-control" id="carModel" required />
            </div>
            <div class="form-group">
                <label>Year</label>
                <input type="number" class="form-control" id="carYear" min="1900" max="2099" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="number" step="0.01" class="form-control" id="carPrice" />
            </div>
            <div class="form-group">
                <label>Color</label>
                <input type="text" class="form-control" id="carColor" />
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" id="carDescription"></textarea>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" class="form-control-file" id="carImage" />
            </div>
            <button class="btn btn-primary" onclick="saveCar()">Save</button>
            <button class="btn btn-secondary" onclick="cancelEdit()">Cancel</button>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Description</th>
                        <th>Color</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model.Cars)
                    {
                        <tr id="car-row-@car.Id">
                            <td>@car.Id</td>
                            <td>
                                <img src="@car.ImageUrl" class="img-thumbnail rounded" style="width: 100px;" />
                            </td>
                            <td>@car.Make</td>
                            <td>@car.Model</td>
                            <td>@car.Year</td>
                            <td>@car.Description</td>
                            <td>@car.Color</td>
                            <td>@car.Price</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="/car/@car.Id">View</a>
                                <button class="btn btn-warning btn-sm" onclick="editCar(@car.Id)">Edit</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteCar(@car.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="fade">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content p-4">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Create Car</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>X</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="carId" />
                    <div class="form-group">
                        <label>Make</label>
                        <input type="text" class="form-control" id="carMake" required />
                    </div>
                    <div class="form-group">
                        <label>Model</label>
                        <input type="text" class="form-control" id="carModel" required />
                    </div>
                    <div class="form-group">
                        <label>Year</label>
                        <input type="number" class="form-control" id="carYear" min="1900" max="2099" />
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" step="0.01" class="form-control" id="carPrice" />
                    </div>
                    <div class="form-group">
                        <label>Color</label>
                        <input type="text" class="form-control" id="carColor" />
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" id="carDescription"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="file" class="form-control-file" id="carImage" />
                    </div>
                    <button class="btn btn-success" onclick="saveCar()">Create</button>
                </div>
            </div>
        </div>
    </div>
</body>
