@model CarSales.Models.Identity.IdentityUserModel;

@{
    ViewData["Title"] = "Register";
}


<head>

    @await Html.PartialAsync("_Imports")

    <script src="~/js/register.js"></script>
</head>


<body>

    <div class="container login-container d-flex align-items-center justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm p-4">
                <h3 class="text-center m-4">Register</h3>

                @await Html.PartialAsync("_ShowError")

                <div class="form-group m-2">
                    <label for="UserName" class="form-label">User Name</label>

                    <div class="input-group">
                        <i class="bi bi-person-fill input-group-text"></i>
                        <input type="email" class="form-control" id="UserName" placeholder="John">
                    </div>
                </div>

                <div class="form-group m-2">
                    <label for="Email" class="form-label">Email address</label>

                    <div class="input-group">
                        <i class="bi bi-envelope-at-fill input-group-text"></i>
                        <input type="email" class="form-control" id="Email" placeholder="john@email.com">
                    </div>
                </div>

                <div class="form-group m-2">
                    <label for="PhoneNumber" class="form-label">Phone Number</label>

                    <div class="input-group">
                        <i class="bi bi-telephone-fill input-group-text"></i>
                        <input type="email" class="form-control" id="PhoneNumber" placeholder="+1 12345678">
                    </div>
                </div>

                <div class="form-group m-2">
                    <label for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <i class="bi bi-lock-fill input-group-text"></i>
                        <input type="password" class="form-control" id="Password" placeholder="Password">
                        <i class="bi bi-eye input-group-text clickable" id="togglePassword"></i>
                    </div>
                </div>

                <div class="form-group m-2">
                    <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <i class="bi bi-lock-fill input-group-text"></i>
                        <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password">
                        <i class="bi bi-eye input-group-text" id="togglePassword1"></i>
                    </div>
                </div>

                <button class="btn btn-primary btn-block" onclick="register()">Register</button>

                <div class="text-center mt-3">
                    Have an account?
                    <a href="/login">Login</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/register.js"></script>
</body>